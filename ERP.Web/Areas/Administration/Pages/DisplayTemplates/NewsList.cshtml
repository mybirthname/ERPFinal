@model IndexModel

@foreach (var item in Model.InputNews)
{
    <tr>
        <td>
            <a asp-page="./Edit" asp-route-id="@item.ID">@Html.DisplayFor(modelItem => item.NrIntern)</a>
        </td>
        <td>
            <a asp-page="./Edit" asp-route-id="@item.ID"> @Html.DisplayFor(modelItem=> item.Title)</a>
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CreateBy)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CreateDate)
        </td>
        <td>
            <form method="post">
                <input name="id" id="id" value="@item.ID" type="hidden" />
                <button type="submit" asp-page="Index" class="btn btn-danger" asp-page-handler="Delete">Delete</button>
            </form>
        </td>
    </tr>
}

