@model Dtos.Customer.CustomerInputeModel

@{
    ViewData["Title"] = "Create";
}

@inject IStringLocalizer<SharedResources> sharedLocalizer

<nav class="navbar navbar-light" style="background-color: #e3f2fd; margin-bottom:15px;">
    <div class="navbar-brand">@sharedLocalizer["CreateCustomer"] </div>
</nav>


<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @Html.EditorForModel("CustomerEdit")
            <div class="form-group">
                <input type="submit" value="@sharedLocalizer["Create"]" class="btn btn-success" />
                <a asp-action="Index" class="btn btn-light">@sharedLocalizer["BackToList"]</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}


